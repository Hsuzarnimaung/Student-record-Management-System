<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#219aa6"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detailToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fff"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Record Detail"
        app:titleTextColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:text="Date : "
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="#fff"
            android:textSize="25dp" />

    </LinearLayout>

    <!--<view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cc0722">

    </view>
-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="145dp"
            android:text="Total Present"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="present"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="149dp"
            android:text="Total Absent"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="absent"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="146dp"
            android:text="Total Student"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total student"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Present List :"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/listPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="5dp"
        android:hint="-"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Absent List :"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/listAb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="5dp"
        android:hint="-"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18dp" />

</LinearLayout>