<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#38aca8"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="textStart"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitle="Reset Password"
        app:titleTextColor="#fff" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="8dp"
        android:src="@drawable/back1"
        app:fab_colorNormal="#f1db55"
        app:fab_colorPressed="#f2ec42"
        app:fab_colorRipple="#99a47e7e"
        app:fab_hideAnimation="@anim/fab_scale_down"
        app:fab_label="More"
        app:fab_progress="0"
        app:fab_progress_backgroundColor="#4D000000"
        app:fab_progress_color="#FF009688"
        app:fab_progress_indeterminate="false"
        app:fab_progress_max="100"
        app:fab_progress_showBackground="true"
        app:fab_shadowColor="#484737"
        app:fab_shadowRadius="4dp"
        app:fab_shadowXOffset="1dp"
        app:fab_shadowYOffset="3dp"
        app:fab_showAnimation="@anim/fab_scale_up"
        app:fab_showShadow="true"
        app:fab_size="normal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/attendance" />

    <EditText
        android:id="@+id/currentPwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:hint="current password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#2e88ce"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/newPwd"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:hint="new password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#2e88ce"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/reEnterPwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:hint="re-enter password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#2e88ce"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button

        android:id="@+id/btnSaveChange"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="#41d1c2"
        android:onClick="onClickChangeSave"
        android:text="SAVE"
        android:textColor="#fff" />


    <Button
        android:id="@+id/btnPwdCancel"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#4ad1c2"
        android:text="CANCEL"
        android:textColor="#fff" />

</LinearLayout>